<article class="location" data-id="{{listing.id}}" data-name="{{listing.name}}" data-latitude="{{listing.latitude}}" data-longitude="{{listing.longitude}}">
  <div class="location-counter"></div>
  <div class="row-fluid header">
    <div class="span5 location-photos-container">
      <div class="location-photos">
        <div class="carousel" id="location-gallery-{{listing.id}}" data-interval="false">
          <div class="carousel-inner">
            {% if listing.photos.size > 0 %}
              {% capture item_active %}active{% endcapture %}
              {% for photo in listing.photos %}
                <div class="item {{item_active}}">
                  <a href="{{ listing.url }}"><img src="{{ photo.space_listing }}" alt="{{ listing.name }}" title="{{ listing.name }}" /></a>
                </div>
                {% capture item_active %}{% endcapture %}
              {% endfor %}
            {% else %}
              <div class="item active">
                <a href="{{ listing.url }}"><img src="{{ 254 | space_listing_placeholder_path: 410}}" title="{{listing.name}}" alt="{{ listing.name }}" /></a>
              </div>
            {% endif %}
          </div>
          {% if listing.photos.size > 1 %}
            <div class="carousel-nav">
              <a href="#location-gallery-{{listing.id}}" class="carousel-control left ico-chevron-left" data-slide='prev'></a>
              <a href="#location-gallery-{{listing.id}}" class="carousel-control right ico-chevron-right" data-slide='next'></a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="span5 location-data">
      <h2><a href="{{ listing.url }}">{{listing.name}}</a></h2>
      {% capture company_name_and_street %}{{listing.company.name}} @ {{listing.street}}{% endcapture %}
      {% if listing.name != company_name_and_street %}
        <div class="subheader">{{ 'search.with' | translate }} {{listing.company.name}} @ {{ listing.street }}</div>
      {% endif %}

      <div class="price-and-types">
        <div class="location-price">
          {% assign price_info = listing | lowest_price_without_cents_with_currency: lgpricing_filters %}
          {% if price_info.price %}
            {{ 'search.price_from' | translate }} <span>{{ price_info.price }}</span>
            {% if price_info.period != blank %}
              / {{ price_info.period }}
            {% endif %}
          {% elsif price_info.free %}
            <span>{{ 'search.free_listing' | translate }}</span>
          {% endif %}
        </div>
      </div>
    </div>
    <div class="span2 reserve-listing padding-top pull-right">
      <a href="{{ listing.url }}" class="btn btn-green btn-small">{{ 'search.reserve' | translate }}</a>
    </div>
  </div>
</article>
