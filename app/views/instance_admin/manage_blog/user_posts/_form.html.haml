= simple_form_for @blog_post,:url => instance_admin_manage_blog_user_post_path, :html => { :multipart => true } do |f|
  .row
    .input-container.col-xs-12
      = f.input :title, required: false, :input_html => { class: 'form-control', :data => { :slug_changed => @blog_post.slug_changed?, :slug_source => true }}
  .row
    .input-container.col-xs-12
      = f.input :highlighted, as: :boolean, input_html: { checked: f.object.highlighted? }, inline_label: true
  .row
    .input-container.col-xs-12
      = f.input :content, required: false, :as => :ckeditor, :input_html => { :ckeditor => { :toolbar => 'simple' } }
  .row
    .input-container.col-xs-12
      = f.input :excerpt, :as => :ckeditor, :input_html => { :ckeditor => { :toolbar => 'simple' } }
  .row
    .input-container.col-xs-4
      = f.input :published_at, required: false, as: :date, include_blank: true, :input_html => { class: 'form-control' }
  .row
    .input-container.col-xs-12
      = f.input :slug, :data => {:slug => true}, :input_html => { class: 'form-control'}
  .row
    .input-container.col-xs-12
      = f.input :tag_list, :input_html => { class: 'form-control', data: data_tags_options(f.object) }

  %h4 Author
  .row
    .input-container.col-xs-6
      = f.input :author_name, :input_html => { class: 'form-control'}
  .row
    .input-container.col-xs-12
      = f.input :author_biography, :input_html => { class: 'form-control'}

  = f.button :submit, "Hidden submit", class: 'hidden_form_element'

  = content_for :header_buttons do
    = f.button :submit, class: "btn btn-blue pull-right", data: { disable_with: t('user_blog.labels.please_wait'), 'submit-form' => 1, 'form-selector' => 'form' }
