{% cache_for listing, listing.availability, listing.company, description %}
  <h2>{{ 'transactable_types.locations.listings.the_listing' | translate }}</h2>
  <p>{{ listing.description | filter_text | custom_sanitize }}</p>

  <div class='amenities-block'>
    <div class='amenities-header'>
      <h3>{{ 'transactable_types.locations.listings.hours' | translate }}</h3>
    </div>
    <div class='amenities-container'>
      <div class='row-fluid amenities-row'>
        <div class='span3'>{{ listing.availability }}</div>
      </div>
    </div>
  </div>

  <div class="clearfix"></div>

  <article class='company'>
    <h2>
      {{ listing.company.name }}
      {% if listing.company.url != blank %}
        <a href="{{ listing.company.url }}" rel='nofollow', target='_blank'><span class='ico-open-link'></span></a>
      {% endif %}
    </h2>

    <p> {{ listing.company.description | filter_text | custom_sanitize }}</p>
    <div class='clearfix'></div>
  </article>
{% endcache_for %}
