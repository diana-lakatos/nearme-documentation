- title "Guests (#{@guest_list.reservations.size})"

= show_manage_navigation(:guests)

#guests
  %section#reservations
    .row-fluid
      .span8.offset2
        .box
          - if @guest_list.scope.empty?
            = render 'dashboard/manage_guests/promote_locations', locations: @locations
          - else
            %header
              = render 'guest_filter'
            .reservation-list
              - if @guest_list.reservations.empty?
                .no-reservations
                  = no_reservations_info_for_state(@guest_list.state)
              - else
                %ul
                  - @guest_list.reservations.each do |reservation|
                    %li
                      = render 'reservation', reservation: reservation.decorate


:javascript
  new Dashboard.GuestsController($('#guests'))

= render 'ratings/rating_modal'
