.customizations-fields-wrapper
  %h3= custom_model.translated_bookable_noun(2)
  .customizations.nested-fields-set
    = f.simple_fields_for custom_model.name.to_sym do |customization_form|
      .nested-container
        = render 'dashboard/company/transactables/form_fields/customization', f: customization_form, custom_model: custom_model
    .add-link
      = link_to_add_association t('dashboard.transactables.add_new_item') , f, :"#{custom_model.name}", partial: 'dashboard/company/transactables/form_fields/customization', render_options: { locals: { custom_model: custom_model, show_hr: true } }, class: 'btn btn-primary'
