<div class="container-fluid header-container">
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner nav-links">
      {% if blog_instance.is_near_me? %}
        <a href='{{ platform_context.root_path }}' id='nm-blog-logo'>Near Me</a>
      {% else %}
        <a href='{{ platform_context.root_path }}' id='logo'>{{ platform_context.name }}</a>
      {% endif %}
      <span class="blog-header">Blog</span>
    </div>
  </div>
</div>

{% if blog_post != nil and blog_post.header_present? %}
  {% capture header_image %} style="background-image: url({{ blog_post.header_url }});"{% endcapture %}
{% elsif blog_instance.header_present? %}
  {% capture header_image %} style="background-image: url({{ blog_instance.header_url }});"{% endcapture %}
{% endif %}

<div class="header">
  <a href='{{ blog_instance.blog_posts_path }}'>
    <div class='header-text-and-logo'{{ header_image }}>
      <div class='v-wrap'>
        <div class='v-box'>
          {% if blog_instance.header_logo_present? %}
          <img src='{{ blog_instance.header_logo_url }}' class='blog-logo' />
          {% endif %}
          {% if blog_instance.header_icon_present? %}
          <img src='{{ blog_instance.header_icon_url }}' class='blog-icon' />
          {% endif %}
          {% if blog_instance.header_text_present? %}
          <span class='header-text {% if blog_instance.header_logo_present? %} with-border {% endif %}'>
            {{ blog_instance.header_text }}
          </span>
          {% endif %}
          {% if blog_instance.header_motto_present? %}
          <p class='header-motto'>
            {{ blog_instance.header_motto }}
          </p>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
